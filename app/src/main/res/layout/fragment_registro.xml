<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgr">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/dim_layout_login"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_login"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dim_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_15dp"
            android:fontFamily="@font/george_bold"
            android:text="@string/txt_registrarse"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_30sp" />

        <EditText
            android:id="@+id/editRegisNombreApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:drawableStart="@drawable/ic_check"
            android:drawableTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/george_semibold"
            android:hint="@string/hint_nombre"
            android:inputType="text"
            android:minHeight="@dimen/dim_min_heig"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/editRegisUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15dp"
            android:backgroundTint="@color/grey"
            android:drawableStart="@drawable/ic_user"
            android:drawableTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/george_semibold"
            android:hint="@string/hint_usuario_edit"
            android:inputType="text"
            android:minHeight="@dimen/dim_min_heig"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/editRegisMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15dp"
            android:backgroundTint="@color/grey"
            android:drawableStart="@drawable/ic_email"
            android:drawableTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/george_semibold"
            android:hint="@string/hint_email_edit"
            android:inputType="textEmailAddress"
            android:minHeight="@dimen/dim_min_heig"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

<!--        <EditText-->
<!--            android:id="@+id/editRegisPassword"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="@dimen/dim_15dp"-->
<!--            android:backgroundTint="@color/grey"-->
<!--            android:drawableStart="@drawable/ic_lock"-->
