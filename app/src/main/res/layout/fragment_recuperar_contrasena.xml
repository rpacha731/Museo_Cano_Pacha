<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgr">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/dim_layout_login"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_login"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dim_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/btnVolverLogin"
                android:layout_width="@dimen/dim_35dp"
                android:layout_height="@dimen/dim_35dp"
                android:layout_marginEnd="@dimen/dim_15dp"
                android:background="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/george_bold"
                android:text="@string/txt_recuperar_contra"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_25sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/editUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_user"
            android:ems="10"
            android:hint="@string/hint_usuario_edit"
            android:inputType="text"
            android:minHeight="@dimen/dim_min_heig"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_20dp"
            android:layout_marginBottom="@dimen/dim_20dp"
            android:drawableStart="@drawable/ic_user"
            android:ems="10"
            android:hint="@string/hint_email_edit"
            android:inputType="textEmailAddress"
            android:minHeight="@dimen/dim_min_heig"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnRecuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_15dp"
            android:background="@drawable/rounded_btn"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:paddingStart="@dimen/dim_15dp"
            android:paddingEnd="@dimen/dim_5dp"
            android:text="@string/txt_recuperar_btn"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>