<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/back_item"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@color/transparente"
        android:translationZ="@dimen/dim_5dp"
        android:layout_marginEnd="@dimen/dim_60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgItemFavo"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        android:layout_marginLeft="@dimen/dim_15dp"
        android:layout_marginTop="@dimen/dim_5dp"
        android:layout_marginBottom="@dimen/dim_5dp"
        android:src="@drawable/mona"
        app:civ_border_color="@color/transparente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/dim_210dp"
        android:layout_height="@dimen/dim_80dp"
        android:layout_marginLeft="@dimen/dim_20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgItemFavo"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tituloItemFavo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/george_bold"
            android:text="@string/titulo_item_fav"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/descripItemFavo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_descrip_item_fav" />

    </LinearLayout>

    <View
        android:id="@+id/viewCorazon"
        android:layout_width="@dimen/dim_35dp"
        android:layout_height="@dimen/dim_35dp"
        android:background="@drawable/ic_favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>