<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgr"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_30dp"
        android:fontFamily="@font/george_bold"
        android:text="@string/escaner_qr"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_iua"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_250dp"
        android:layout_marginTop="@dimen/dim_40dp"
        android:src="@drawable/qr_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tittle" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_iua">

        <Button
            android:id="@+id/btnEscanear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_40dp"
            android:elevation="@dimen/dim_5dp"
            android:background="@drawable/rounded_btn"
            android:paddingStart="@dimen/dim_15dp"
            android:paddingEnd="@dimen/dim_15dp"
            android:text="@string/btn_escanear_qr"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18sp" />

        <Button
            android:id="@+id/btn_verListado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn"
            android:paddingStart="@dimen/dim_15dp"
            android:paddingEnd="@dimen/dim_15dp"
            android:text="@string/btn_ver_contenido"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_30dp"
        android:background="@drawable/rounded_btn"
        android:paddingStart="@dimen/dim_15dp"
        android:paddingEnd="@dimen/dim_15dp"
        android:text="@string/txt_favoritos"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>